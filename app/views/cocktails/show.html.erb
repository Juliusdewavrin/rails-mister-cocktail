<h1><%= @cocktail.name %></h1>

<% @cocktail.doses.each do |dose| %>
  <ul>
    <li>
      <p>
      <%= dose.description %> of
      <%= Ingredient.find(dose.ingredient_id).name %>
      <%= link_to "", dose_path(dose), method: :delete, data: { confirm: 'Are you sure?' }, class: "fa fa-trash" %>
      </p>
    </li>
  </ul>
<% end %>

<p><%= link_to 'Add new dose', new_cocktail_dose_path(@cocktail), {class: "btn btn-danger"} %></p>

<p><%= link_to 'back', cocktails_path, {class: "btn btn-danger"} %></p>
